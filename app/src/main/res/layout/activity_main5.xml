<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity"
    android:background="@drawable/b8">

    <EditText
        android:id="@+id/n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pno"
        android:layout_below="@+id/pno"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/n"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="212dp"
        android:layout_toEndOf="@+id/textView8"
        android:onClick="Entry"
        android:text="SELL" />


    <Button
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/a"
        android:layout_marginEnd="70dp"
        android:onClick="dis"
        android:text="BUY" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pno"
        android:layout_alignStart="@+id/textView21"
        android:text="PhoneNO:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/n"
        android:layout_alignStart="@+id/textView7"
        android:text="Name:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ad"
        android:layout_alignStart="@+id/textView7"
        android:text="Loation:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:text="Location:" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="315dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="344dp"
                android:layout_height="240dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="26dp"
                android:layout_marginStart="22dp"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="166dp"
        android:text="Type:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toEndOf="@+id/textView10"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignTop="@+id/textView19"
        android:layout_toEndOf="@+id/editText3"
        android:text="Qty(in kg):"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true" />

</RelativeLayout>